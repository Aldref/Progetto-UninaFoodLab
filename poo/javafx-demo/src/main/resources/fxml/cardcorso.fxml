<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" stylesheets="css/cardcorso.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.progetto.controller.CardCorsoController">
   <children>
      <!-- Background container -->
      <VBox styleClass="background-container" />
      
      <!-- Main card container -->
      <VBox maxWidth="400.0" styleClass="card" spacing="0.0">
         <children>
            <!-- Image section -->
            <StackPane prefHeight="200.0" styleClass="card-image">
               <children>
                  <Label styleClass="chef-icon" text="">
                     <font>
                        <Font size="60.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            
            <!-- Content section -->
            <VBox styleClass="card-content" spacing="12.0">
               <children>
                  <!-- Category tag -->
                  <HBox spacing="8">
                     <children>
                        <Label fx:id="acquistatoBadge" text="✓ Acquistato" styleClass="acquistato-badge" visible="false"/>
                        <Label styleClass="course-category" text="Cucina Italiana">
                              <font>
                                 <Font name="System Bold" size="11.0" />
                              </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <!-- Title -->
                  <Label styleClass="course-title" text="Corso Avanzato di Cucina Tradizionale">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  
                 
                  <Label styleClass="course-description" text="Scopri i segreti della vera cucina italiana attraverso un viaggio culinario autentico. Imparerai a preparare pasta fresca, risotti cremosi, sughi tradizionali e dolci della nonna. Il nostro chef esperto ti guiderà passo dopo passo nella realizzazione di piatti che raccontano la storia e la passione dell'Italia a tavola." wrapText="true" />
                  
                  
                  <VBox styleClass="course-details" spacing="8.0">
                     <children>
                        <HBox styleClass="detail-row">
                           <children>
                              <Label styleClass="detail-label" text="Inizio Corso" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label styleClass="detail-value" text="15/07/2025" />
                           </children>
                        </HBox>
                        
                        <HBox styleClass="detail-row">
                           <children>
                              <Label styleClass="detail-label" text="Fine Corso" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label styleClass="detail-value" text="30/09/2025" />
                           </children>
                        </HBox>
                        
                        <HBox styleClass="detail-row">
                           <children>
                              <Label styleClass="detail-label" text="Frequenza" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label styleClass="detail-value" text="2 volte a settimana" />
                           </children>
                        </HBox>
                        
                        <HBox styleClass="detail-row">
                           <children>
                              <Label styleClass="detail-label" text="Tipo lezione" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label styleClass="detail-value" text="Presenza" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Price section -->
                  <VBox styleClass="price-section" spacing="5.0" fx:id="priceSection">
                     <children>
                        <Label fx:id="priceLabel" styleClass="price" text="€380"/>
                     </children>
                  </VBox>

                  <!-- Buttons section (acquista + calendario affiancati) -->
                  <HBox alignment="CENTER" spacing="15" fx:id="buttonsBox" styleClass="buttons-box">
                     <children>
                        <Button fx:id="buyButton" mnemonicParsing="false" onAction="#handlePurchase" styleClass="buy-button" text="Acquista">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Button>
                        <Button fx:id="calendarButton"
                              text="Vedi calendario"
                              styleClass="calendar-button"
                              visible="false"
                              onAction="#handleShowCalendar"/>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</StackPane>