<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.progetto.controller.HomepageUtenteController">

    <!-- Sidebar sinistra -->
    <left>
        <AnchorPane style="-fx-background-color: #2C56C9;" prefWidth="176.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="90.0" fitWidth="112.0" layoutX="32.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../immagini/login_image.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </left>

    <!-- Contenuto centrale -->
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>

                <!-- Barra superiore -->
                <VBox AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      prefHeight="133.0" style="-fx-background-color: #2C56C9;">
                    <children>
                        <Label text="qualcosa" />
                    </children>
                </VBox>

                <!-- Scroll dei contenuti -->
                <ScrollPane AnchorPane.topAnchor="133.0" AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                            fitToWidth="true" fitToHeight="true">
                    <content>
                        <FlowPane fx:id="cardcontainer"
                                  hgap="30" vgap="30"
                                  prefWrapLength="1600">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>

            </children>
        </AnchorPane>
    </center>

</BorderPane>
